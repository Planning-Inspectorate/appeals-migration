{
  "name": "appeals-migration",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "type": "module",
  "main": "index.js",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=22.21.0"
  },
  "scripts": {
    "check-types": "npx tsc",
    "commitlint": "commitlint --from=$(git cherry origin/main | head -n 1 | cut -c 3-)",
    "db-migrate-dev": "npm run migrate-dev --workspace @pins/appeals-migration-database",
    "db-migrate-prod": "npm run migrate-prod --workspace @pins/appeals-migration-database",
    "db-generate": "npm run generate --workspace @pins/appeals-migration-database",
    "db-seed": "npm run seed --workspace @pins/appeals-migration-database",
    "db-seed-prod": "npm run seed:prod --workspace @pins/appeals-migration-database",
    "db-manage-appeals-setup": "npm run dev-setup --workspace @pins/manage-appeals-database",
    "format": "prettier --write .",
    "format-check": "prettier --check .",
    "lint": "npx eslint .",
    "prepare": "node .husky/install.mjs",
    "test": "node --test",
    "test-coverage": "node --test --experimental-test-coverage"
  },
  "dependencies": {
    "@azure/functions": "^4.11.0",
    "@azure/identity": "^4.13.0",
    "@prisma/adapter-mssql": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "body-parser": "^2.2.2",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "pino": "^10.2.1",
    "pino-pretty": "^13.1.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@microsoft/microsoft-graph-types": "^2.43.1",
    "@types/node": "^25.0.9",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.0",
    "prettier-plugin-prisma": "^5.0.0",
    "prisma": "^7.2.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.1"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix"
    ],
    "*.{js,ts,json,md,prisma,yml,yaml,scss}": [
      "prettier --write"
    ]
  }
}
